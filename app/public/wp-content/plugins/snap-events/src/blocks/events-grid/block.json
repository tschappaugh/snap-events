{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "snap-events/events-grid",
    "version": "1.0.0",
    "title": "Events Grid",
    "category": "widgets",
    "icon": "calendar-alt",
    "description": "Display upcoming events in a responsive card grid.",
    "keywords": [ "events", "calendar", "cards", "grid", "upcoming" ],
    "textdomain": "snap-events",
    "attributes": {
        "count": {
            "type": "number",
            "default": 6
        },
        "columns": {
            "type": "number",
            "default": 3
        },
        "showExcerpt": {
            "type": "boolean",
            "default": true
        },
        "showImage": {
            "type": "boolean",
            "default": true
        },
        "showDate": {
            "type": "boolean",
            "default": true
        },
        "showLocation": {
            "type": "boolean",
            "default": true
        },
        "city": {
            "type": "string",
            "default": ""
        },
        "state": {
            "type": "string",
            "default": ""
        }
    },
    "supports": {
        "html": false,
        "align": [ "wide", "full" ],
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true
        },
        "color": {
            "background": true,
            "text": true,
            "link": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "editorScript": "file:./index.js",
    "render": "file:./render.php"
}
