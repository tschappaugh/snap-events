{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "snap-events/events-grid",
    "version": "1.0.0",
    "title": "Events Grid",
    "category": "widgets",
    "icon": "calendar-alt",
    "description": "Display upcoming events in a responsive card grid.",
    "keywords": [ "events", "calendar", "cards", "grid", "upcoming" ],
    "textdomain": "snap-events",
    "attributes": {
        "anchor": {
            "type": "string",
            "default": ""
        },
        "count": {
            "type": "number",
            "default": 6
        },
        "columns": {
            "type": "number",
            "default": 3
        },
        "showExcerpt": {
            "type": "boolean",
            "default": true
        },
        "showImage": {
            "type": "boolean",
            "default": true
        },
        "showDate": {
            "type": "boolean",
            "default": true
        },
        "showLocation": {
            "type": "boolean",
            "default": true
        },
        "cardBackgroundColor": {
            "type": "string",
            "default": "#2e3858"
        },
        "cardTextColor": {
            "type": "string",
            "default": "rgba(255, 255, 255, 0.7)"
        },
        "cardHeadingColor": {
            "type": "string",
            "default": "#ffffff"
        },
        "cardLinkColor": {
            "type": "string",
            "default": "#ffffff"
        },
        "cardPadding": {
            "type": "number",
            "default": 30
        },
        "cardBorderRadius": {
            "type": "number",
            "default": 0
        },
        "cardBoxShadow": {
            "type": "boolean",
            "default": false
        },
        "cardBorderWidth": {
            "type": "number",
            "default": 0
        },
        "cardBorderColor": {
            "type": "string",
            "default": "#cccccc"
        },
        "gridGap": {
            "type": "number",
            "default": 30
        },
        "enableLoadMore": {
            "type": "boolean",
            "default": true
        },
        "enableSort": {
            "type": "boolean",
            "default": true
        },
        "defaultSortOrder": {
            "type": "string",
            "default": "ASC"
        }
    },
    "supports": {
        "html": false,
        "anchor": true,
        "align": [ "wide", "full" ]
    },
    "editorScript": "file:./index.js",
    "viewScript": "file:./view.js",
    "render": "file:./render.php"
}
